<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res/com.wikitude.architect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.wikitude.architect.ArchitectView
        android:id="@+id/architectView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >
    </com.wikitude.architect.ArchitectView>

    <EditText
        android:id="@+id/textBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:inputType="text" >
    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textBuscar"
        android:onClick="realizarBusqueda"
        android:text="@string/botonBuscar" />

    <SeekBar
        android:id="@+id/seekBarRango"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textBuscar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:progress="30" />

</RelativeLayout>